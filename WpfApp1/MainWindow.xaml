<!-- MainWindow.xaml -->
<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="keyTextBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" KeyDown="KeyTextBox_KeyDown"/>
        <TextBox x:Name="textTextBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0"/>
        <Button Content="Добавить" Width="80" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,0,0,0"/>
        <ListBox x:Name="entriesListBox" Width="300" Height="200" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,80,0,0" SelectionChanged="EntriesListBox_SelectionChanged">
            <!-- Дополнительные настройки могут быть добавлены -->
        </ListBox>
        <Button Content="Изменить" Width="80" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,80,0,0" Click="EditButton_Click"/>
        <Button Content="Удалить" Width="80" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,120,0,0" Click="DeleteButton_Click"/>
    </Grid>
</Window>
